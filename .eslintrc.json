{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "new-cap": ["error", { "capIsNewExceptions": ["Ripple"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "quotes": [0, "double", { "avoidEscape": true }],

    // TODO:
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "consistent-return": 0,
    "import/prefer-default-export": 0,
    "indent": 0,
    "no-console": 1,
    "no-else-return": 0,
    "no-nested-ternary": 0,
    "no-tabs": 0,
    "no-underscore-dangle": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/no-string-refs": 1,
    "react/prop-types": 0,
    "react/sort-comp": 0
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "react-native"
  ]
}